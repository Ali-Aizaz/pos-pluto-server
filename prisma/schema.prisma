generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                     String   @id @default(uuid()) @db.Uuid
  name                   String   @db.VarChar(255)
  email                  String   @db.VarChar(255)
  password               String   @db.VarChar(255)
  image                  String?  @db.VarChar(255)
  provider               Provider
  role                   Role     @default(STOREOWNER)
  resetPasswordToken     String?  @db.VarChar(255)
  lastCredentialChange   DateTime @default(now()) @db.Timestamptz(6)
  resetPasswordExpire    DateTime @db.Timestamptz(6)
  emailVerificationToken String?  @db.VarChar(255)
  isEmailVerified        Boolean  @default(false)
  createdAt              DateTime @default(now()) @db.Timestamptz(6)
  updatedAt              DateTime @updatedAt @db.Timestamptz(6)
  store                  Store[]

  @@unique([email])
}

model Product {
  id          String        @id @default(uuid()) @db.Uuid
  name        String        @db.VarChar(255)
  image       String?       @db.VarChar(255)
  createdAt   DateTime      @default(now()) @db.Timestamptz(6)
  updatedAt   DateTime      @updatedAt @db.Timestamptz(6)
  categoryId  String        @db.Uuid
  category    Category      @relation(fields: [categoryId], references: [id])
  productData ProductData[]
  inventory   Inventory[]
  order       Order[]
}

model ProductData {
  id        String  @id @default(uuid()) @db.Uuid
  type      Type    @default(STRING)
  field     String  @db.VarChar(255)
  value     String  @db.VarChar(255)
  productId String  @db.Uuid
  product   Product @relation(fields: [productId], references: [id])
}

model Category {
  id        String    @id @default(uuid()) @db.Uuid
  name      String    @db.VarChar(255)
  createdAt DateTime  @default(now()) @db.Timestamptz(6)
  updatedAt DateTime  @updatedAt @db.Timestamptz(6)
  Product   Product[]
}

model Inventory {
  id        String   @id @default(uuid()) @db.Uuid
  count     Int      @default(1) @db.Integer
  productId String   @db.Uuid
  createdAt DateTime @default(now()) @db.Timestamptz(6)
  updatedAt DateTime @updatedAt @db.Timestamptz(6)
  product   Product  @relation(fields: [productId], references: [id])
}

model Order {
  id        String   @id @default(uuid()) @db.Uuid
  price     Int      @db.Integer
  count     Int      @default(1) @db.Integer
  state     State    @default(SOLD)
  createdAt DateTime @default(now()) @db.Timestamptz(6)
  updatedAt DateTime @updatedAt @db.Timestamptz(6)
  productId String   @db.Uuid
  product   Product  @relation(fields: [productId], references: [id])
}

model Store {
  id          String   @id @default(uuid()) @db.Uuid
  name        String   @db.VarChar(255)
  description String   @db.VarChar(255)
  image       String?  @db.VarChar(255)
  createdAt   DateTime @default(now()) @db.Timestamptz(6)
  updatedAt   DateTime @updatedAt @db.Timestamptz(6)
  ownerId     String   @db.Uuid
  owner       User     @relation(fields: [ownerId], references: [id])
}

enum State {
  SOLD
  RETURNED
  WARRANTY
}

enum Provider {
  EMAIL
  GOOGLE
}

enum Role {
  USER
  STOREOWNER
  ADMIN
}

enum Type {
  NUMBER
  STRING
  BOOLEAN
}
